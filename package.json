{
    "name": "svelte-express-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for developing full stack apps with Express and Svelte.js",
    "main": "src/app.ts",
    "scripts": {
        "client-install": "cd client && npm install",
        "test": "jest",
        "build:server": "tsc",
        "build:client": "cd client && npm run build",
        "build": "npm run build:server && npm run build:client",
        "start": "export NODE_ENV=production&& node dist/src/index.js",
        "serve:server-dev": "nodemon src/index.ts",
        "serve:client-dev": "cd client && npm run dev",
        "dev": "concurrently \"npm run serve:server-dev\" \"npm run serve:client-dev\"",
        "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd client && npm install && npm run build"
    },
    "dependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.0.2",
        "body-parser": "^1.20.1",
        "concurrently": "^7.5.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "express-session": "^1.18.0",
        "node-sass": "^9.0.0",
        "sass": "^1.78.0",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.4",
        "svelte": "^4.2.10",
        "svelte-preprocess": "^5.1.3",
        "svelte-toasts": "^1.1.2",
        "ts-node": "^10.9.2",
        "uid-safe": "^2.1.5",
        "unplugin-icons": "^0.19.3",
        "uuid": "^9.0.1",
        "vite": "^5.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.23.9",
        "@babel/preset-env": "^7.23.9",
        "@babel/preset-typescript": "^7.23.3",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.18",
        "@types/uuid": "^9.0.8",
        "babel-jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "shx": "^0.3.4",
        "typescript": "^5.3.3"
    }
}
