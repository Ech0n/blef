{
  "name": "svelte-express-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for developing full stack apps with Express and Svelte.js",
  "main": "src/app.ts",
  "scripts": {
    "client-install": "cd client && npm install",
    "test": "jest",
    "start": "node src/index.ts",
    "serve:server": "nodemon src/index.ts",
    "serve:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run serve:server\" \"npm run serve:client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd client && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dj0nny/svelte-express-boilerplate.git"
  },
  "author": "dj0nny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dj0nny/svelte-express-boilerplate/issues"
  },
  "homepage": "https://github.com/dj0nny/svelte-express-boilerplate#readme",
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "body-parser": "^1.20.1",
    "concurrently": "^7.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "svelte": "^4.2.10",
    "svelte-preprocess": "^5.1.3",
    "ts-node": "^10.9.2",
    "uid-safe": "^2.1.5",
    "uuid": "^9.0.1",
    "vite": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.18",
    "@types/uuid": "^9.0.8",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
